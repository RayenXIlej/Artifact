<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="inscription/style.css" />
    <title>Registration</title>
  </head>
  <body>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form action="{{ path('app_login') }}" class="sign-in-form" method="post">

            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
            <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            {% endif %}

            <h2 class="title">Connectez</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Saisir votre Email">
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Saisir votre mot de passe">
        
            </div>

             <input type="hidden" name="_csrf_token"
              value="{{ csrf_token('authenticate') }}"
              >

            <input type="submit" value="Se connecter" class="btn solid" />
            <p class="social-text">Visiter notre page Facebook</p>
            <div class="social-media">
              <a href="https://www.facebook.com/cimf.tn" class="social-icon">
                <i class="fab fa-facebook-f"></i>
              </a>
            </div>
          </form>
          <form action="{{ path('security_registration') }}" class="sign-up-form" method="post">
            <h2 class="title">Inscription</h2>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}})  }}
            <div class="input-field">
              <i class="fas fa-user"></i>
              {{form_row(form.nom)}}
              <input type="text" placeholder="Username" />
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              {{form_row(form.prenom)}}
              
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <div>{{form_row(form.email)}}<>
                  
            </>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              {{form_row(form.dnaissance)}}
              
              
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              {{form_row(form.password)}}
              
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              {{form_row(form.confirm_password)}}
               
            </div>

            <div class="input-field">
              <i class="fas fa-lock"></i>
              {{form_row(form.adresse)}}
           
            </div>

            <div class="input-field">
              <i class="fas fa-lock"></i>
              {{form_row(form.type)}}
           
            </div>

            <div class="input-field">
              
              {{form_row(form.ajouter)}}
           
            </div>

            <div class="input-field">
              
              {{form_row(form.agreeTerms)}}
           
            </div>

            
            {{form_end(form)}}
            
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here ?</h3>
            <p>
              Incrivez-vous pour avoir accès à notre plateforme
            </p>
            <button class="btn transparent" id="sign-up-btn">
              Inscription
            </button>
          </div>
          <img src="inscription/img/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p>
              Authentifier-vous pour accéder à votre plateforme
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Athentification
            </button>
          </div>
          <img src="inscription/img/register.svg" class="image" alt="" />
        </div>
      </div>
    </div>

    <script src="inscription/app.js"></script>
  </body>
</html>
