<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="inscription/style.css" />
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css' rel='stylesheet' />
    <title>Registration</title>
  </head>
  <body>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form action="{{ path('app_login') }}" class="sign-in-form" method="post" novalidate="novalidate">

            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
            <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            {% endif %}

            <h2 class="title">Se connecter</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Saisir votre Email">
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Saisir votre mot de passe">
        
            </div>

             <input type="hidden" name="_csrf_token"
              value="{{ csrf_token('authenticate') }}"
              >
            <p><a href="{{ path('forget_password') }}">Mot de passe oublié ?</a></p>
            <input type="submit" value="Se connecter" class="btn solid" />
            <p class="social-text">Visiter notre page Facebook</p>
            <div class="social-media">
              <a href="https://www.facebook.com/cimf.tn" class="social-icon">
                <i class="fab fa-facebook-f"></i>
              </a>
            </div>
          </form>
          <form action="{{ path('security_registration') }}" class="sign-up-form" method="post" novalidate="novalidate">
            <h2 class="title">Inscription</h2>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}})  }}
            <div class="input-field">
              <i class="fas fa-user"></i>
              <div style="text-align:center;">
                {{form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder':'Saisir votre nom'} })}}
                
              </div>
            </div>
            {{ form_errors(form.nom) }}
            <div class="input-field">
              <i class="fas fa-user"></i>
              <div style="text-align:center;">
              {{form_widget(form.prenom, { 'attr': {'class': 'form-control', 'placeholder':'Saisir votre prénom'} })}}
              
              </div>
              
            </div>
            {{ form_errors(form.prenom) }}
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <div style="text-align:center;">
              {{form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'Saisir votre adresse mail'} })}}
              </div>   
            </div>
            {{ form_errors(form.email) }}
            <div class="input-field">
              <i class="fas fa-calendar-alt"></i>
              <div style="text-align:center;">
              {{form_widget(form.numtel, { 'attr': {'class': 'form-control', 'placeholder':'Composer votre Numero'} })}}
              
              </div>
            </div>
            {{ form_errors(form.numtel) }}
            <div class="input-field">
              <i class="fas fa-unlock-alt"></i>
              <div style="text-align:center;">
              {{form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder':'Saisir votre MDP'} })}}
              
              </div>
              
            </div>
            {{ form_errors(form.password) }}
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <div style="text-align:center;">
              {{form_widget(form.confirm_password, { 'attr': {'class': 'form-control', 'placeholder':'confirmer votre MDP'} })}}
              
              </div>
               
            </div>
            {{ form_errors(form.confirm_password) }}

             {# <div class="">
              
              
                
                      <div id='map' style='width: 40px; height: 30px;'></div>          
                
            </div> #}

            <div class="input-field">
              <i class="fas fa-address-card"></i>
              <div class="col-sm-10">
                                <div style="text-align:center;">
                                {{form_widget(form.adresse, { 'attr': {'class': 'form-control', 'placeholder':'Saisir votre nom'} })}}</div>
                                
                                </div>
            </div>
            {{ form_errors(form.adresse) }}
            <div class="input-field">
              <i class="fas fa-thumbtack"></i>
              <div style="text-align:center;">
              {{form_widget(form.type, { 'attr': {'class': 'form-control', 'placeholder':'Vous ete ?'} })}}
              
              </div>
            </div>
            {{ form_errors(form.type) }}
            <div id="diplome" style="display:none;">
              {{ form_row(form.diplome) }}
              {{ form_errors(form.diplome) }}
            </div>

            {{form_row(form.agreeTerms)}}
            
              
            <div style="text-align: center;">  
            <button type="submit" class="btn btn-block btn-info"><h> Inscription</h></button>
            <button type="reset" class="btn btn-block btn-info"><h> Annuler</h></button>
            </div>
            
              
              
           
            

            
            
            <script>
                var diplome = document.getElementById('diplome');
                var type = document.getElementById('{{ form.type.vars.id }}');
                type.addEventListener('change', function () {
                    if (type.value === 'veterinaire') {
                        diplome.style.display = 'block';
                    } else {
                        diplome.style.display = 'none';
                    }
                });
            </script>
            {{form_end(form)}}
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here ?</h3>
            <p>
              Incrivez-vous pour avoir accès à notre plateforme
            </p>
            <button class="btn transparent" id="sign-up-btn">
              Inscription
            </button>
          </div>
          <img src="inscription/img/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p>
              Authentifier-vous pour accéder à votre plateforme
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Athentification
            </button>
          </div>
          <img src="inscription/img/register.svg" class="image" alt="" />
        </div>
      </div>
    </div>

    <script src="inscription/app.js"></script>
    
  </body>
</html>
