


{% extends 'index.html.twig' %}

{% block body %}

    <h1>Offre</h1>

<div>
    <ul class="nav pull-right top-menu">
        <li> <a class="btn btn-danger btn-xs" href="{{ path('addOffre') }}" >Ajouter</a> </li>
    </ul>
</div>


    <ul class="nav pull-right top-menu">

    <table border="0" class="display table table-bordered" id="hidden-table-info">

        <tr>

            <td style="color: #3ea9dd"> Description</td>
            <td style="color: #3ea9dd"> DateDebut</td>
            <td style="color: #3ea9dd"> DateFin </td>
            <td style="color: #3ea9dd"> Prix </td>
            <td style="color: #3ea9dd"> QR Code </td>

            <td style="color: #3ea9dd"> Modifier</td>
            <td style="color: #3ea9dd"> Supprimer</td>

        </tr>

        {% for i in showOffres %}
            <tr>
                <td>{{ i.Description }}</td>
                <td> {{ i.DateDebut|date("m/d/Y") }}</td>
                <td> {{ i.DateFin|date("m/d/Y") }}</td>
                <td>{{ i.Prix }}</td>
                <td><img src="{{ qr_code_path(i.Description) }}" /></td>

                <td> <a href="{{ path('updateOffre',{'id':i.id}) }}" class="btn btn-primary btn-xs">
                        <i class="fa fa-pencil">Modfier

                        </i>
                    </a>
                </td>

                <td> <a href="{{ path('deleteOffre',{'id':i.id}) }}" class="btn btn-danger btn-xs">
                        <i class="fa fa-trash">Delete

                        </i>
                    </a>
                </td>

            </tr>

        {% endfor %}
    </table>



{% endblock %}