{% extends 'baseBack.html.twig' %}
{% block headerContent %}
{% endblock %}
{% block mainContent %}
{% if demandes is empty %}
<div style="text-align: center;">
  <img src="distAdmin/dist/img/noReq.jpg" align="center">
</div>
{% else %}
    <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des demandes</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Nom</th>
                      <th>Pr√©nom</th>
                      <th>Type</th>
                      <th>Email</th>
                      <th>Valider</th>
                      <th>Refuser</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for demande in demandes %}
                    <tr>
                      <td>{{demande.nom}}</td>
                      <td>{{demande.prenom}}</td>
                      <td>{{demande.type}}</td>
                      <td>{{demande.email}}</td>
                      <td><a href="{{ path('accepter', {'id':demande.id}) }}"><button type="button" class="btn btn-block btn-success">accepter</button></a></td>
                      <td><a href="{{ path('removeVetAcces', {'id':demande.id}) }}" class="btn btn-danger btn-delete">Rufuser</a></td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
{% endif %}
{% endblock %}

          