{% extends 'baseBack.html.twig' %}
{% block headerContent %}
{% endblock %}
{% block mainContent %}
    <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des petOwners</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>Nom</th>
                      <th>Prénom</th>
                      <th>Type</th>
                      <th>Email</th>
                      <th>Bloquer/Débloquer</th>
                      <th>Supprimer</th>
                    </tr>
                  </thead>
                  <tbody>
                  {% for user in users %}
                    <tr>
                      <td>{{user.nom}}</td>
                      <td>{{user.prenom}}</td>
                      <td>{{user.type}}</td>
                      <td>{{user.email}}</td>
                      {% if user.bloque == 0 %}
                      <td><a href="{{ path('bloquer', {'id':user.id}) }}"><button type="button" class="btn btn-block btn-warning">Bloquer</button></a></td>
                      {% else %}
                      <td><a href="{{ path('debloquer', {'id':user.id}) }}"><button type="button" class="btn btn-block btn-danger">Debloquer</button></a></td> 
                      {% endif %}
                      <td><a href="{{ path('removePetOwner', {'id':user.id}) }}" class="btn btn-danger btn-delete">Supprimer</a></td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>

        {% block javascripts %}
                <script>
                // Sélectionnez le bouton "Supprimer" avec la classe CSS
                var btnDelete = document.querySelector('.btn-delete');

                // Ajoutez un écouteur d'événement pour le clic sur le bouton "Supprimer"
                btnDelete.addEventListener('click', function(event) {
                // Empêche le comportement par défaut de l'élément cliqué (la navigation vers la page de suppression)
                event.preventDefault();

                // Affiche une boîte de dialogue de confirmation et stocke le résultat dans une variable
                var confirmDelete = confirm("Êtes-vous sûr de vouloir supprimer cet élément ?");

                // Si l'utilisateur a cliqué sur "OK" dans la boîte de dialogue de confirmation, continuez avec la suppression
                if (confirmDelete) {
                    // Récupérez l'URL de suppression de l'attribut href de l'élément cliqué
                    var deleteUrl = btnDelete.getAttribute('href');

                    // Effectuez une requête AJAX à l'URL de suppression pour supprimer l'élément
                    fetch(deleteUrl, {
                        method: 'DELETE'
                    })
                    .then(function(response) {
                        // Si la suppression réussit, rechargez la page pour afficher les modifications
                        location.reload();
                    })
                    .catch(function(error) {
                        // Si la suppression échoue, affichez une erreur dans la console du navigateur
                        console.error(error);
                    });
                }
            });
            </script>
            <script src="{{ asset('js/delete-confirm.js') }}"></script>
        {% endblock %}
{% endblock %}